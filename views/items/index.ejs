<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>***Item*INDEX*Project 2 Comic Index Page</title>
        <link rel="stylesheet" href="/css/app.css">
    </head>
    <body>
        <h1>Comics Index Page</h1>
        
        <nav>
            <a href="/items/new">Enter a New Comic</a>
        </nav>
        <ul>
            <% fruits.forEach((fruit, i) => { %>
            <li>
                <a href="/fruits/<%= fruits[i].id %>">
                    <%= fruits[i].name %>
                </a>
                			<!--  ADD DELETE FORM HERE-->
			<form action="/fruits/<%= fruits[i].id %>?_method=DELETE" method="POST">
				<input type="submit" value="Delete file"/>
            </form>
                        <!-- Add edit link here  -->
            <a href="/fruits/<%= fruits[i].id %>/edit">Edit</a>
            </li>
            <% }) %>
          </ul>
    </body>
</html>